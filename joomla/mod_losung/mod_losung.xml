<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.9" client="site" method="upgrade">
    <name>MOD_LOSUNG</name>
    <author>Max Nötzold</author>
    <creationDate>May 2025</creationDate>
    <copyright>Copyright (C) 2025 Max Nötzold. All rights reserved.</copyright>
    <license>ISC</license>
    <authorEmail>max.noetzold@gmail.com</authorEmail>
    <version>1.0.0</version>
    <description>MOD_LOSUNG_XML_DESCRIPTION</description>
    
    <files>
        <filename module="mod_losung">mod_losung.php</filename>
        <filename>helper.php</filename>
        <folder>tmpl</folder>
        <folder>language</folder>
        <folder>data</folder>
    </files>
    
    <languages>
        <language tag="en-GB">language/en-GB/en-GB.mod_losung.ini</language>
        <language tag="en-GB">language/en-GB/en-GB.mod_losung.sys.ini</language>
    </languages>
    
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field
                    name="csv_folder"
                    type="text"
                    label="MOD_LOSUNG_FIELD_CSV_FOLDER_LABEL"
                    description="MOD_LOSUNG_FIELD_CSV_FOLDER_DESC"
                    default="modules/mod_losung/data"
                />
            </fieldset>
            
            <fieldset name="advanced">
                <field
                    name="moduleclass_sfx"
                    type="text"
                    label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
                    description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" 
                />
                <field
                    name="layout"
                    type="modulelayout"
                    label="JFIELD_ALT_LAYOUT_LABEL"
                    description="JFIELD_ALT_MODULE_LAYOUT_DESC" 
                />
            </fieldset>
        </fields>
    </config>
</extension>